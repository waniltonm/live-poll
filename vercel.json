{
  "version": 2,
  "projects": [
    {
      "rootDirectory": "frontend",
      "builds": [
        {
          "src": "package.json",
          "use": "@vercel/static-build",
          "config": { "distDir": "build" }
        }
      ]
    },
    {
      "rootDirectory": "backend",
      "builds": [
        {
          "src": "server.js",
          "use": "@vercel/node"
        }
      ]
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ]
}
